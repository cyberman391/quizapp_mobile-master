<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ActivityPackage.SettingActivity">


    <!--change language secion-->
    <LinearLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onChangeLang"
        android:foreground="?selectableItemBackground"
        android:visibility="gone"
        android:layout_height="60dp"
        android:background="#FAFBFF"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_lang" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Change Language"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:rotationX="180"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_show_downarrow" />

    </LinearLayout>

    <!--sound secion-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:foreground="?selectableItemBackground"
        android:background="#FAFBFF"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sound" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Sound"
            android:textSize="18sp" />

       <Switch
           android:id="@+id/sw_sound"
           android:layout_width="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginEnd="5dp"
           android:layout_height="wrap_content" />

    </LinearLayout>

    <!--connect privacy policy-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/btn_privacy_policy"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:foreground="?selectableItemBackground"
        android:background="#FAFBFF"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/privacy" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:rotationX="180"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_show_downarrow" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        android:id="@+id/btn_terms_of_conditions"
        android:layout_marginTop="5dp"
        android:foreground="?selectableItemBackground"
        android:background="#FAFBFF"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/term" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/terms_conditions"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:rotationX="180"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_show_downarrow" />

    </LinearLayout>


</LinearLayout>