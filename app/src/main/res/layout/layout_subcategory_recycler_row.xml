<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout_sub_cat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_holo_green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sub_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_science" />

        <TextView
            android:id="@+id/tv_sub_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Applied Physics"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_sub_lock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_lock"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_sub_unlock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/right_arrow"
            android:tint="@color/color_white"
            android:visibility="gone" />

    </LinearLayout>


</androidx.cardview.widget.CardView>